---
import Layout from '../layouts/Layout.astro';
import GithubIcon from "../icons/Github.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import GreatherIcon from "../icons/Greather.astro";
import InstagramIcon from "../icons/Instagram.astro";
---

<Layout 
  title="Links | Eduardo Fuentes Reyes Desarrollador web" 
  description="PÃ¡gina de links de Eduardo Fuentes, desarrollador."
>
	<main>
    <section
      class=`w-full lg:w-[750px] min-h-[800px] xl:h-[950px] flex justify-center flex-col mx-auto my-auto`
    >
      <div class="flex flex-col items-center min-h-[650px] border rounded-3xl shadow-white shadow-lg py-16">
        <img 
            src="me.webp" 
            alt="edudev photo" 
        class="rounded-full size-36 object-cover shadow-white/50 shadow-lg"
        />
        <h2
          id="title-typed"
          class="text-white text-base md:text-3xl flex justify-center flex-row gap-x-5 font-bold mt-5"
        >
          Eduardo Fuentes | Desarrollador
        </h2>
        <h3 class="mb-5 text-blue-400/100 text-sm md:text-xl">@eduuu.dev</h3>
          <ul>
            <li>
              <a 
                href="https://eduardo732.github.io/portfolio" 
                target="_blank" 
                class=`w-full text-base md:text-xl flex flex-row justify-center items-center rounded-3xl border border-white/10 gap-x-2 py-2 px-4 my-2 bg-white/5 hover:scale-110 transition`
              >
                <GreatherIcon class="size-6"/>
                Sitio Oficial
              </a>
            </li>
            <li>
              <a 
                href="https://github.com/eduardo732" 
                target="_blank" 
                class=`w-full text-base md:text-xl flex flex-row justify-center items-center rounded-3xl border border-white/10 gap-x-2 py-2 px-4 my-2 bg-white/5 hover:scale-110 transition`
              >
                <GithubIcon class="size-6"/>
                Github
              </a>
            </li>
            <li>
              <a
                href="https://www.linkedin.com/in/eduardofuentesreyes/" 
                target="_blank" 
                class=`w-full text-base md:text-xl flex flex-row justify-center items-center rounded-3xl border border-white/10 gap-x-2 py-2 px-4 my-2 bg-white/5 hover:scale-110 transition`
              >
                <LinkedinIcon class="size-6"/>
                Linkedin
              </a>
            </li>
            <li>
              <a
                href="https://www.instagram.com/eduuu.dev" 
                target="_blank" 
                class=`w-full text-base md:text-xl flex flex-row justify-center items-center rounded-3xl border border-white/10 gap-x-2 py-2 px-4 my-2 bg-white/5 hover:scale-110 transition`
              >
                <InstagramIcon class="size-6"/>
                Instagram
              </a>
            </li>
          </ul>
      </div>
    </section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		PADDING: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
